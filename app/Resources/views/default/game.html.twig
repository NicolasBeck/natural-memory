{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .img-responsive{
            padding: 10px;
        }
        .front{
            background-color: blue;
            width: 100px;
            height: 100px;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container" id="plateau">
        {% for line in record.plateau %}

            <div class="row">
                {% for card in line %}
                    <div class="col-sm-1">
                        <div class="img-responsive">
                            <div id="card">
                                <div class="front">

                                </div>
                                <div class="back">
                                    <img src="{{ card }}" width="100" height="100">
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>

        {% endfor %}
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $("#card").flip();
    </script>
{% endblock %}